<section class="main-container">
  <div class="container">
    <div class="alert alert-warning" role="alert">
      Docelowo lista zgłoszonych zespołów będzie widoczna tylko dla administratorów.
    </div>
	  <div class="row">
	    <div class="col-md-12">
	    
        <table class="table table-hover">
          <thead>
            <tr>
              <th width="25">Id</th>
              <th>Imię i nazwisko</th>
              <th>Adres e-mail</th>
              <th>numer legitki</th>
              <th>Data zgłoszenia</th>
              <th>Ilość</th>
              <th></th>
            </tr>
          </thead>
          
          <% @orders.each do |t| %>
            <tr>
              <td><%= t.id %></td>
              <td><%= link_to t.nazwa, t %></td>
              <td><%= t.email %></td>
              <td><%= t.legitka %></td>
              <td><%= t.created_at %></td>
              <td><%= t.ilosc %></td>
              <td><%= link_to "Usuń", t, method: :delete, data: { confirm: 'Na pewno usunąć?' } %></td>
            </tr>
          <% end %>
          
        </table>
      </div>
    </div>
  </div>
</section>