<section class="main-container">
  <div class="container">
    
		<div class="alert alert-warning" role="alert">
			Docelowo lista zgłoszonych zespołów będzie widoczna tylko dla administratorów.
		</div>
		
	  <div class="row">
	    <div class="col-md-12">
	    
        <table class="table table-hover">
          <thead>
            <tr>
              <th width="35">Numer zespołu</th>
              <th>Nazwa</th>
              <th>Adres e-mail</th>
              <th>Kategoria</th>
              <th>Data zgłoszenia</th>
              <th></th>
            </tr>
          </thead>
          
          <% @teams.each do |t| %>
            <tr>
              <td><%= t.id %></td>
              <td><%= link_to t.nazwa, t %></td>
              <td><%= t.mail %></td>
              <td><%= t.kategoria %></td>
              <td><%= t.created_at %></td>
              <td><%= link_to "Usuń", t, method: :delete, data: { confirm: 'Na pewno usunąć?' } %></td>
            </tr>
          <% end %>
          
        </table>
      </div>
    </div>
  </div>
</section>